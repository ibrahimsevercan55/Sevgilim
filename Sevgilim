<script>
const text=document.getElementById("text");
const buttons=document.getElementById("buttons");

function show(msg,btns){
  text.innerHTML=msg;
  buttons.innerHTML="";
  btns.forEach(b=>{
    const btn=document.createElement("button");
    btn.textContent=b.t;
    btn.className=b.c;
    btn.onclick=b.f;
    buttons.appendChild(btn);
  });
}

show("Sana kucuk bir hikaye hazirladim.",[
  {t:"Baslayalim",c:"yes",f:q1}
]);

function q1(){
  show("Bugun biraz agir mi geliyor?",[
    {t:"Evet",c:"yes",f:q2},
    {t:"Biraz",c:"no",f:q2}
  ]);
}

function q2(){
  show("Bazen insan sadece anlasilmak ister.",[
    {t:"Dogru",c:"yes",f:q3}
  ]);
}

function q3(){
  show("Ben buradayim.",[
    {t:"Devam et",c:"yes",f:final}
  ]);
}

function final(){
  text.innerHTML=`
    Gulumse üòÑ<br><br>
    Seni cok seviyorum ‚ù§Ô∏è
    <img class="photo" src="https://raw.githubusercontent.com/ibrahimsevercan55/Sevgilim/main/IMG_1266.jpeg">
  `;
  buttons.innerHTML="";
}
</script>

